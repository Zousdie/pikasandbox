    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "mini-css-extract-plugin": "^0.10.0",
    "postcss": "^7.0.32",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.1.1",
    "thread-loader": "^2.1.3",
