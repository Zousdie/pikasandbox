    "type": "git",
    "url": "git+https://github.com/Zousdie/pikasandbox.git"
  },
  "engines": {
    "node": ">=10.16.0",
    "yarn": ">=1.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "autoprefixer": "^9.8.6",
